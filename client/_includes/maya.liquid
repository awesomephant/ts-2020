<style>
    .maya-slider {
        background: white;
        position: fixed;
        width: 12rem;
        bottom: 5rem;
        left: 50%;
        transform: translateX(-50%) translateY(100%);
        opacity: 0;
        padding: 1em 2em;
        border-radius: 100px;
        transition: 500ms;
        transition-delay: 300ms;
    }
    [data-font="XronikaGX"] .maya-slider{
        transform: translateX(-50%) translateY(0);
        opacity: 1;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slider = document.querySelector('.maya-slider input')
        slider.addEventListener('input', (e) => {
            document.body.style.fontVariationSettings = `'tong' ${e.target.value}`
        })
    })
</script>