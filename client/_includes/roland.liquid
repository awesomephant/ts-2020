{% assign alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ" | split : "" %}

<style>
    .roland .letter {
        display: none;
    }

    .roland .letter[data-letter='A'],
    .roland .letter.active {
        display: inline;
    }

    .roland figure.active {
        display: none;
    }

    .roland .letter[data-letter="{{alphabet | last}}"].open ~ figure {
        display: inline;
    }
</style>

<div class="roland">
    {% for letter in alphabet %}
    {% brackets "[", 1 %}<span class="letter" data-letter="{{letter}}">
        <button class="letter-expand">
            {{letter}}
        </button>
        {% endfor %}
        {% for letter in alphabet %}
    </span><figure data-cursortext="arrowRight" style="height: 4em" data-original="Roland_0_M.mp4"
    data-large="https://ts-2020.s3.eu-west-2.amazonaws.com/Roland_0_M.mp4" class="work-figure">
    <video autoplay="" muted="" loop="" style="height: 4em"
        src="https://ts-2020.s3.eu-west-2.amazonaws.com/Roland_0_M.mp4"></video><button data-cursortext="Expand"
        class="figure-expand"><svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path d="M5,5H10V7H7V10H5V5M14,5H19V10H17V7H14V5M17,14H19V19H14V17H17V14M10,17V19H5V14H7V17H10Z"></path>
        </svg></button></figure>{% brackets "[", 1 %}
    {% endfor %}
</div>