---
layout: base
---

<div class="lightbox">
  <figure>
    <img src="https://i.picsum.photos/id/365/500/300.jpg" alt="" class="lightbox-image">
    <figcaption>Image caption goes here</figcaption>
  </figure>
</div>

<ul class="site-users"></ul>
<main class="works">
  <div class="site-title">
    <h1>[[[[[[[[[[Typographic Singularity 2020]]]]]]]]]]</h1>
  </div>
  <nav class="controls">
    <a href='#1' data-section='title' class="control">{%raw%}{{{Titles}}}{%endraw%}</a>
    <a href='#1' data-section='description' class="control">{%raw%}[[[Texts]]]{%endraw%}</a>
    <a href='#1' data-section='author' class="control">{%raw%}[[[People]]]{%endraw%}</a>
    <a href='#1' data-section='images' class="control">{%raw%}(((Images))){%endraw%}</a>
    <a href='#1' data-section='comments' class="control">{%raw%}[[[Comments]]]{%endraw%}</a>
    <nav class="site-auth">
      <a id='js-signin' class='auth-signin' href="#" onclick="signOut();">{Sign in with Google}</a>
      <span class="auth-user"></span>
      <a class='auth-signout' href="#" onclick="signOut();">{Sign out}</a>
    </nav>
  </nav>
  {% for p in projects %}
  <div class="work" data-project="{{p.id}}">
    <section data-controls="description" data-brackets='[]' class="work-section work-title">
      <div class="section-content">
        <h2>{{p.title}}</h2>
      </div>
    </section>
    <section data-controls="author" data-brackets='[]' class="work-section work-description">
      <div class="section-content">
        {{p.description}}
      </div>
    </section>
    <section data-controls="images" data-brackets='[]' class="work-section work-author">
      <div class="section-content">
        <h2>{{p.name}}<a href="{{p.website}}">(Website)</a></h2>
      </div>
    </section>
    <section data-controls="comments" data-brackets='[]' class="work-section work-images">
      <div class="section-content">
        {% assign images = p.images | split: "," %}
        {% for img in images %}
        {% if img %}
        {% fig img %}
        {% endif %}
        {% endfor %}

        {% if p.typeface != "" %}
        <button class="toggleTypeface" data-typeface='{{p.typeface}}'>{%raw%}{{{Activate Typeface}}}{%endraw%}</button>
        {% endif %}

        {% if p.id == "11" %}
        {% include jose.liquid %}
        {% endif %}

        {% if p.id == "18" %}
        {% include meli.liquid %}
        {% endif %}

        {% if p.id == "21" %}
        {% include roland.liquid %}
        {% endif %}

      </div>
    </section>
    <section data-brackets='[]' class="work-section work-comments">
      <div class="test-comments">
        <ul class="comments" id='comment-list'></ul>
        <div class="comment-form" data-project="{{p.id}}">
          <span class="input" id="comment-input-{{p.id}}" contenteditable>Say something nice</span>
          <button class="comment-submit">{%raw%}{{{Send}}}{%endraw%}</button>
        </div>
      </div>
    </section>
  </div>

  {% endfor %}
</main>
<div class="jose-container">
</div>