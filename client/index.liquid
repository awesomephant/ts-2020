---
layout: base
---

<div class="lightbox">
  <figure>
    <img src="https://i.picsum.photos/id/365/500/300.jpg" alt="" class="lightbox-image">
    <figcaption>Image caption goes here</figcaption>
  </figure>
</div>

<ul class="site-users"></ul>
<main class="works">
  <div class="site-title">
    <h1>
      {% brackets "[", 90%}
      <span>Typographic Singularity 2020</span>
      {% brackets "]", 90%} 
    </h1>
    <h2>
      {% brackets "[", 90%} 
      An annual celebration of the eclectic and experimental use of typography and language in creative practices in the {% link "https://www.rca.ac.uk/schools/school-of-communication/visual_communication/" %}Visual Communication programme{% endlink %} at the {% link "https://www.rca.ac.uk/"%}Royal College of Art{% endlink %}</h2>
      {% brackets "]", 120%}
  </div>
  <br>
  <nav class="controls">
    <a href='#1' data-section='title' class="control">{% brackets "{", 3 %}Titles{% brackets "}", 3 %}</a>
    <a href='#1' data-section='description' class="control">{% brackets "{", 3 %}Texts{% brackets "}", 3 %}</a>
    <a href='#1' data-section='author' class="control">{% brackets "{", 3 %}People{% brackets "}", 3 %}</a>
    <a href='#1' data-section='images' class="control">{% brackets "{", 3 %}Work{% brackets "}", 3 %}</a>
    <a href='#1' data-section='comments' class="control">{% brackets "{", 3 %}Comments{% brackets "}", 3 %}</a>
    <nav class="site-auth">
      <a id='js-signin' class='auth-signin' href="#" onclick="signOut();">{Sign in with Google to Comment}</a>
      <span class="auth-user"></span>
      <a class='auth-signout' href="#" onclick="signOut();">{Sign out}</a>
    </nav>
  </nav>
  {% for p in projects %}
  <div class="work" data-project="{{p.id}}">
    <section data-controls="description" data-brackets='[]' class="work-section work-title">
      <div class="section-content">
        <h2>{{p.title}}</h2>
      </div>
    </section>
    <section data-controls="author" data-brackets='[]' class="work-section work-description">
      <div class="section-content">
        {{p.description}}
      </div>
    </section>
    <section data-controls="images" data-brackets='[]' class="work-section work-author">
      <div class="section-content">
        <h2>{% link p.website %}{{p.name}}{% endlink %}</h2>
      </div>
    </section>
    <section data-controls="comments" data-brackets='[]' class="work-section work-images">
      <div class="section-content">
        {% assign images = p.images | split: "," %}
        {% for img in images %}
        {% if img %}
        {% fig img %}
        {% endif %}
        {% endfor %}

        {% if p.typeface != "" %}
        <button class="toggleTypeface" data-typeface='{{p.typeface}}'>{Activate {{p.typeface}}.ttf}</button>
        {% endif %}

        {% if p.id == "11" %}
        {% include jose.liquid %}
        {% endif %}

        {% if p.id == "16" %}
        {% include maya.liquid %}
        {% endif %}

        {% if p.id == "18" %}
        {% include meli.liquid %}
        {% endif %}

      </div>
    </section>
    <section data-brackets='[]' class="work-section work-comments">
      <div class="test-comments">
        <ul class="comments" id='comment-list'></ul>
        <div class="comment-form" data-project="{{p.id}}">
          <span class="input" id="comment-input-{{p.id}}" contenteditable>Say something nice</span>
          <button class="comment-submit">{%raw%}{{{Send}}}{%endraw%}</button>
        </div>
      </div>
    </section>
  </div>

  {% endfor %}
</main>

<div class="jose-container">
</div>

<div class="maya-slider">
  <input min="100" max="200" value="100" type="range"></input>
</div>